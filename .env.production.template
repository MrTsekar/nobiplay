# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# CRITICAL: Never commit this file with real credentials to version control!
# Copy this file to .env and replace all placeholder values
# =============================================================================

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Nobiplay
APP_URL=https://api.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use managed database service (AWS RDS, DigitalOcean Managed DB, etc.)
DB_HOST=your-production-db-host.region.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=nobiplay_prod_user
DB_PASSWORD=GENERATE_STRONG_PASSWORD_MIN_32_CHARACTERS
DB_NAME=nobiplay_production
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_CHAR_HEX_STRING_USING_COMMAND_ABOVE
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# =============================================================================
# RATE LIMITING
# =============================================================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# Paystack (Nigeria)
# Dashboard: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_live_YOUR_PAYSTACK_SECRET_KEY
PAYSTACK_PUBLIC_KEY=pk_live_YOUR_PAYSTACK_PUBLIC_KEY

# Monnify (Nigeria)
# Dashboard: https://app.monnify.com/settings
MONNIFY_API_KEY=MK_PROD_YOUR_API_KEY
MONNIFY_SECRET_KEY=YOUR_SECRET_KEY
MONNIFY_CONTRACT_CODE=YOUR_CONTRACT_CODE
MONNIFY_ACCOUNT_ID=YOUR_ACCOUNT_ID

# VAS Payment Provider
VAS_API_KEY=YOUR_VAS_API_KEY
VAS_SECRET_KEY=YOUR_VAS_SECRET_KEY
VAS_AGGREGATOR_URL=https://api.vas.com

# =============================================================================
# FIREBASE CONFIGURATION (Push Notifications)
# =============================================================================
# Get from: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# =============================================================================
# SMS SERVICE
# =============================================================================

# Twilio
# Dashboard: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Termii (Alternative SMS provider)
# Dashboard: https://termii.com/
SMS_SERVICE=termii
SMS_API_KEY=YOUR_TERMII_API_KEY
SMS_SENDER_ID=YourBrand

# =============================================================================
# EMAIL SERVICE
# =============================================================================

# SendGrid
# Dashboard: https://app.sendgrid.com/settings/api_keys
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=SG.YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# SMTP Configuration (Alternative)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.YOUR_SENDGRID_API_KEY
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# CRITICAL SECURITY:
# - Only list your actual production domains
# - NEVER use '*' with credentials enabled
# - Always use HTTPS in production
CORS_ENABLED=true
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# REDIS CACHING
# =============================================================================
# Use managed Redis (AWS ElastiCache, Redis Cloud, Upstash, etc.)
REDIS_HOST=your-redis-instance.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD
REDIS_TLS=true

# =============================================================================
# APM MONITORING (Elastic APM)
# =============================================================================
APM_ENABLED=true
APM_SERVER_URL=https://your-apm-server.elastic-cloud.com:443
APM_SECRET_TOKEN=YOUR_APM_SECRET_TOKEN
APM_SERVICE_NAME=nobiplay-backend
APM_ENVIRONMENT=production

# =============================================================================
# ERROR MONITORING (Sentry)
# =============================================================================
# Dashboard: https://sentry.io/settings/projects/
SENTRY_DSN=https://YOUR_KEY@o1234567.ingest.sentry.io/1234567
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CRYPTO_WITHDRAWAL=false
ENABLE_USSD_MODE=true
ENABLE_SMS_MODE=true
ENABLE_TOURNAMENTS=true
ENABLE_REFERRAL_SYSTEM=true

# =============================================================================
# SECURITY CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# ✓ All placeholder values are replaced with real credentials
# ✓ JWT_SECRET is generated using crypto.randomBytes(64)
# ✓ Database password is strong (32+ characters)
# ✓ DB_SYNCHRONIZE is set to false
# ✓ DB_SSL is enabled
# ✓ CORS_ORIGIN only lists HTTPS domains
# ✓ Redis password is set
# ✓ All API keys are from production accounts (not test/sandbox)
# ✓ .env file is added to .gitignore
# ✓ Environment variables are set in hosting platform
# ✓ APM and Sentry are properly configured
# ✓ LOG_LEVEL is set to 'info' or 'warn'
# =============================================================================
