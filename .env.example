# Application
NODE_ENV=production
PORT=3000
APP_NAME=Nobiplay
APP_URL=https://api.yourdomain.com

# Postgres Database
# PRODUCTION: Use managed database service (AWS RDS, DigitalOcean, etc.)
DB_HOST=your-production-db-host.region.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=nobiplay_prod_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS
DB_NAME=nobiplay_production
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# JWT Authentication
# IMPORTANT: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_RANDOM_64_CHAR_HEX_STRING
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Payment Gateways
# Get from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_live_YOUR_PAYSTACK_SECRET_KEY
PAYSTACK_PUBLIC_KEY=pk_live_YOUR_PAYSTACK_PUBLIC_KEY

# Get from: https://app.monnify.com/settings
MONNIFY_API_KEY=MK_PROD_YOUR_MONNIFY_API_KEY
MONNIFY_SECRET_KEY=YOUR_MONNIFY_SECRET_KEY
MONNIFY_CONTRACT_CODE=YOUR_CONTRACT_CODE
MONNIFY_ACCOUNT_ID=YOUR_ACCOUNT_ID

# VAS Provider
VAS_API_KEY=YOUR_VAS_API_KEY
VAS_SECRET_KEY=YOUR_VAS_SECRET_KEY
VAS_AGGREGATOR_URL=https://api.vas.com
VAS_AGGREGATOR_API_KEY=YOUR_VAS_AGGREGATOR_KEY

# Firebase (for push notifications)
# Get from: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Twilio (for SMS)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
# For production, use: SendGrid, AWS SES, or Mailgun
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.YOUR_SENDGRID_API_KEY
SMTP_FROM=noreply@yourdomain.com

# CORS Configuration
# IMPORTANT: Only list your production frontend domains
# WARNING: Never use '*' with credentials enabled
CORS_ENABLED=true
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Logging
# Production: Use 'info' or 'warn' to reduce noise
LOG_LEVEL=info

# Redis Caching
# PRODUCTION: Use managed Redis (AWS ElastiCache, Redis Cloud, etc.)
REDIS_HOST=your-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_CHANGE_ME
REDIS_TLS=true

# APM Monitoring (Elastic APM)
# Enable in production for performance monitoring
APM_ENABLED=true
APM_SERVER_URL=https://your-apm-server.elastic-cloud.com:443
APM_SECRET_TOKEN=YOUR_APM_SECRET_TOKEN
APM_SERVICE_NAME=nobiplay-backend
APM_ENVIRONMENT=production

# Email Service
# Get from: https://app.sendgrid.com/settings/api_keys
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=SG.YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@yourdomain.com

# SMS Service
# Get from: https://termii.com/
SMS_SERVICE=termii
SMS_API_KEY=YOUR_TERMII_API_KEY
SMS_SENDER_ID=YourBrand

# Error Monitoring
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://YOUR_SENTRY_KEY@o1234567.ingest.sentry.io/1234567
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_CRYPTO_WITHDRAWAL=false
ENABLE_USSD_MODE=true
ENABLE_SMS_MODE=true
ENABLE_TOURNAMENTS=true
ENABLE_REFERRAL_SYSTEM=true
